{
    "manifest_version": 3,
    "name": "Hello Extensions",
    "description": "Base Level Extension",
    "version": "1.0",
    "action": {
      "default_popup": "./home.html",
      "default_icon": "./images/logo.png"
    },

    "content_scripts": [
      {
        "js": ["content.js"],
        "matches": [
          "https://www.goodreads.com/book/show/*",
          "https://www.goodreads.com/en/book/show/*"
        ]
      }
    ]

  }